<div class="show_background" style="background-image: url(<%= asset_path 'showpage.jpg' %>)" %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/lumen/bootstrap.css"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/lumen/bootstrap.min.css"></script>
 
 <div class="padding">
  <div class="results-container">
    <div class="results">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#home" data-toggle="tab">Overview</a></li>
        <li><a href="#profile" data-toggle="tab">Inspection Results</a></li>
        <li><a href="#map" data-toggle="tab">View Map</a></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
            Inspection Results <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <%binding.pry%>
             <% @result.first.inspection_results.each do |date, result| %>
              <ul>
                <li><a href="<%=date%>" data-toggle="tab"><%=date%></a></li>
            <li class="divider"></li>
              </ul>
              <% end %>
              <br>
          </ul>
        </li>
      </ul>




      <!-- OVERVIEW OF RESTAURANT -->
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="home">
           <p>
            <strong>Name:</strong>

            <%= @result.first.restaurant_name %>
          </p>
          
          <p>
            <strong>Cuisine:</strong>
            <%= @result.first.cuisine_description %>
          </p>


         <!--  <p>
            <strong>Inspection date:</strong>
            <%#= @result.first.inspection_date[0] %>
          </p> -->


          <p>
            <strong>Grade:</strong>
            <%= @result.first.grade[0] %>
          </p>

           <p>
            <strong>Address:</strong>
            <%= @result.first.building %>
            <%= @result.first.street %>
            <%= @result.first.zipcode %>
            <%= @result.first.boro %>
          </p>
           
          <p>
            <strong>Phone:</strong>
            <%= @result.first.phone_num %>
          </p>
          <br><br>
        </div>


        <!-- INSPECTION RESULTS -->

        <div class="tab-pane fade" id="profile">
          <p>
            <strong>Violation(s):</strong>
            <ul>
              <% @result.first.inspection_results.each do |violation| %>
              <ul>
                <%= violation %>
              </ul>
              <br>
              <% end %>
            </ul>
          </p>


          <p>
            <strong>Violation Code(s):</strong>
            <%= @result.first.violation_codes.join(", ") %>
          </p>
          <br><br>

        </div>


      <div class="tab-pane fade" id="map">
    
        <iframe
          width="600"
          height="450"
          frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD6AHICy-KKBR2oipdWqk1wYu030qMeYfw&q=<%=@result.first.restaurant_name%> restaurant new york city" allowfullscreen>
        </iframe>

      </div>




         <% @result.first.inspection_results.each do |date, result| %>
          <div class="tab-pane fade" id="<%=date%>">
            <p><%= result %></p>
         </div>
        <% end %>



<!-- YELP  INFO -->
 @yelp.businesses.first.snippet_text


             
      </div>
    </div>
  </div>
</div>


