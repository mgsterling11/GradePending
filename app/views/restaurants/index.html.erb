<div class="show_background" style="background-image: url(<%= asset_path 'showpage.jpg' %>)" %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/lumen/bootstrap.css"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/lumen/bootstrap.min.css"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
 

   
   <div class="padding">
    <div class="results-container">
 <% @result.each_with_index do |result, index| %>
      <div class="results">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#home" data-toggle="tab"><i class="fa fa-cutlery"></i> Overview</a></li>
          <li><a href="#profile" data-toggle="tab"><i class="fa fa-cutlery"></i> Find this <%=@result[index].restaurant_name%> on Yelp</a></li>
          <li><a href="#map" data-toggle="tab"><i class="fa fa-cutlery"></i> View this <%=@result[index].restaurant_name%> on Map</a></li>
        
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
              Inspection Results <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
               <% @result[index].inspection_results.each do |date, result| %>
                <ul>
                  <li><a href="<%=date%>" data-toggle="tab"><i class="fa fa-cutlery"></i> <%=date%></a></li>
              <li class="divider"></li>
                </ul>
                <% end %>
                <br>
            </ul>
          </li>
        </ul>    

        <!-- OVERVIEW OF RESTAURANT -->
        <div id="myTabContent" class="tab-content">
          <div class="tab-pane fade active in" id="home">
             <p>
              <strong>Name:</strong>

              <%= @result[index].restaurant_name %>
            </p>
            
            <p>
              <strong>Cuisine:</strong>
              <%= @result[index].cuisine_description.split('').join('')%>
            </p>

            <p>
              <strong>Grade:</strong>
              <%= @result[index].grade[0].split('').join('') %>
            </p>

             <p>
              <strong>Address:</strong>
              <%= @result[index].building %>
              <%= @result[index].street %>
              <%= @result[index].zipcode %>
              <%= @result[index].boro %>
            </p>
             
            <p>
              <strong>Phone:</strong>
              <%= @result[index].phone_num %>
            </p>
            <br><br>
          </div>
          
          

          <!-- INSPECTION RESULTS -->

        <div class="tab-pane fade" id="profile[index]">
          <p>
            <strong>Rating:</strong> <%=@yelp.businesses[0].rating%> stars
          </p>
          <p>
            <strong>Review Count:</strong> <%=@yelp.businesses[0].review_count%> 
          </p>
          <p>
            <strong>Recent Review Snippet:</strong><br> <%=@yelp.businesses[0].snippet_text%>
          </p>
          <p>
            For more information, visit <u><a href="<%=@yelp.businesses[0].url%>"><%=@result[0].restaurant_name%></a></u>'s Yelp Page
          </p>

          <br><br>
        </div>


  <!-- GOOGLE MAP -->
        <div class="tab-pane fade" id="map">
          <iframe
            width="600"
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD6AHICy-KKBR2oipdWqk1wYu030qMeYfw&q=<%=@result[index].restaurant_name%>  <%=@result[0].street%> restaurant new york city" allowfullscreen>
          </iframe>
        </div>

        </div>
      </div>

    <% end %>
    </div>
  </div>

        
         